<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>br.gov.lexml.madoc</groupId>
		<artifactId>madoc-dominio</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>madoc-engine</artifactId>
	<packaging>jar</packaging>
	<name>Montador Autom√°tico de Documentos - MADOC</name>
	<description>Processamento dos XML e PDF do MADOC</description>

	<build>
		<plugins>

			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.14.0</version>
				<executions>
					<execution>
						<id>jaxb2-schemas</id>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<extension>true</extension>

					<args>
						<arg>-Xcopyable</arg>
						<arg>-Xinheritance</arg>
						<arg>-Xvisitor</arg>
						<arg>-Xvisitor-package:br.gov.lexml.madoc.server.schema.entity.visitor</arg>
					</args>

					<schemaDirectory>src/main/xsd</schemaDirectory>
					<generatePackage>br.gov.lexml.madoc.server.schema.entity</generatePackage>
					<generateDirectory>${project.build.directory}/generated-sources/xjc</generateDirectory>

					<plugins>
						<plugin>
							<groupId>org.ops4j.xvisitor</groupId>
							<artifactId>xvisitor-plugin</artifactId>
							<version>0.1.0</version>
						</plugin>
						<plugin>
							<groupId>org.jvnet.jaxb2_commons</groupId>
							<artifactId>jaxb2-basics</artifactId>
							<version>0.6.4</version>
						</plugin>
					</plugins>
				</configuration>
			</plugin>

			<!-- Manifest info -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<index>false</index>
						<manifestEntries>
							<Project-version>${project.version}</Project-version>
						</manifestEntries>
						<manifestSections>
							<manifestSection>
								<name>pdfa-fonts/GenBasB.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/GenBasBI.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/GenBasI.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/GenBasR.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/FreeSerif.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/FreeSerifBold.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/FreeSerifBoldItalic.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
							<manifestSection>
								<name>pdfa-fonts/FreeSerifItalic.ttf</name>
								<manifestEntries>
									<Content-Type>application/x-font</Content-Type>
								</manifestEntries>
							</manifestSection>
						</manifestSections>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>


